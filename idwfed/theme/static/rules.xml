                                <img src="/media/c189-banner/c189_thai_banner.png/image" /> 
                            </xsl:when>
                            <xsl:when css:test=".section-62117684516c5e734e4b5bb6">
                                <img src="/media/c189-banner/c189_simplified_chinese_banner.png/image" /> 
                            </xsl:when>
                            <xsl:when css:test=".section-62117684516c5e734e4b5bb6-1">
                                <img src="/media/c189-banner/c189_traditional_chinese_banner.png/image" /> 
                            </xsl:when>
                            <xsl:when css:test=".section-mijustohogar">
                                <img src="/media/c189-banner/c189_spanish_banner.png/image" /> 
                            </xsl:when>
