                                <img src="/media/c189-banner/c189_lao_banner.png/image" /> 
                            </xsl:when>
                            <xsl:when css:test=".section-ngoinhabinhdangcuatoi">
                                <img src="/media/c189-banner/c189_vietnamese_banner.png/image" /> 
                            </xsl:when>
                            <xsl:when css:test=".section-lamiacasagiusta">
                                <img src="/media/c189-banner/c189_italian_banner.png/image" /> 
