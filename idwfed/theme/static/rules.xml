<?xml version="1.0" encoding="UTF-8"?>
<!--start main rule, only theme if #visual-portal-wrapper exist -->
<rules
    xmlns="http://namespaces.plone.org/diazo"
    xmlns:css="http://namespaces.plone.org/diazo/css"
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
    xmlns:xi="http://www.w3.org/2001/XInclude"
    css:if-content="#visual-portal-wrapper">
        
        <!--HEAD SECTION-->
        <!-- Drop styles in the head - these are added back by including them from Plone -->
        <drop theme="/html/head/style | /html/head/script | /html/head/link | /html/head/title" />
        <prepend theme="/html/head" content="/html/head/base | /html/head/link | /html/head/style | /html/head/script | /html/head/meta | /html/head/title" />
        <replace theme="/html" content="/html" attributes="lang"/>
        <merge theme="/html/body" content="/html/body" attributes="class"/>
        <merge theme="/html/body" content="/html/body" attributes="dir"/>
        <append css:theme="body" css:content="#plone-analytics"/>
        <prepend css:theme=".colorstrip-inner" css:content="#portal-personaltools"/>

        <replace css:theme-children="#portal-personaltools-wrapper"
            css:content-children="#portal-personaltools-wrapper"/>
        <replace css:theme-children="#portal-searchbox"
            css:content-children="#portal-searchbox"/>

        <!--<replace css:theme="#logo" css:content="#portal-logo" attribute="href" />-->

        <replace css:theme-children="#portal-globalnav"
            css:content-children="#portal-globalnav"/>
        <!--mobile menu-->
        <replace css:theme-children="ul.mobile-menu"
            css:content-children="#portal-globalnav"/>
        
        <replace 
            css:theme-children='#portal-languageselector' 
            css:content-children='#portal-languageselector'/>
            <!--mobile language-->
        <replace css:theme-children="ul.mobile-languageselector"
            css:content-children="#portal-languageselector"/>
        
        <!--drop from content-->
        <drop css:content="body.template-document_view #parent-fieldname-description" />

        <replace css:theme-children="#portal-column-content"
            css:content-children="#portal-column-content"/>
        
        <replace css:theme-children="#sidebar-left"
            css:content-children="#portal-column-one"/>
        
        <replace css:theme-children="#sidebar-right"
            css:content-children="#portal-column-two"/>

        <replace css:theme-children="#portal-colophon"
            css:content-children="#portal-colophon"/>

        <replace css:theme-children=".portal-siteactions"
            css:content-children="#portal-siteactions"/>
        
        <!-- search -->
        <replace css:theme-children=".search-container">
            <form class="search-portlet"><xsl:attribute name="action">
                <xsl:value-of select="//*[@id='portal-searchbox']/form/@action"/></xsl:attribute>
                <div class="search-field">
                <xsl:copy-of css:select="#portal-searchbox input[name='SearchableText']"/>
                <xsl:copy-of css:select="#portal-searchbox input.searchButton"/>
                </div>
            </form>
        </replace>
        
        <!--homepage-->
        <rules css:if-content=".portaltype-collective-cover-content.section-front-page">
            <theme href="main.html"/>
            <!--updates-->
            <replace css:theme-children=".wrap-updates">
                <dl class="theme-portlet wrap-updates">
                    <dt>
                        <i class="fa fa-check-circle-o theme-orange"></i>
                        <xsl:value-of css:select="#content > div:nth-child(2) > div.cell.width-4.position-0 > div.tile > div.cover-collection-tile.tile-content > div.tile-header > h2" />
                    </dt>
                    <dd>
                        <ul>
                            <xsl:for-each css:select="#content > div:nth-child(2) > div.cell.width-4.position-0 > div.tile > div.cover-collection-tile.tile-content > .collection-item">
                                <li><xsl:copy-of css:select="h2 a" /></li>
                            </xsl:for-each>
                        </ul>    
                    </dd>
                </dl>
            </replace>
            <!--featured content-->
            <replace css:theme-children=".wrap-featured">
                <div class="featured wrap-featured">
                    <div class="featured-img">
                        <xsl:copy-of css:select="#content > div:nth-child(2) > div.cell.width-6.position-4 > div.tile > div.cover-basic-tile.tile-content > a.imag" />
                    </div>
                    <div class="featured-text">
                        <p class="title">
                            <xsl:copy-of css:select="#content > div:nth-child(2) > div.cell.width-6.position-4 > div.tile > div.cover-basic-tile.tile-content > h2 > a" />
                        </p>
                        <p><xsl:copy-of css:select="#content > div:nth-child(2) > div.cell.width-6.position-4 > div.tile > div.cover-basic-tile.tile-content > p" /></p>
                    </div>
                </div>
            </replace>
            <!--campaign-->
            <replace css:theme-children=".wrap-campaign">
                <dl class="theme-portlet wrap-campaign">
                    <dt><i class="fa fa-globe theme-orange"></i> Campaign</dt>
                    <dd>
                        <xsl:copy-of css:select="#content > div:nth-child(2) > div.cell.width-4.position-10 > div.tile > div.cover-collection-tile.tile-content > .collection-item" />
                    </dd>
                </dl>
            </replace>
            <!--activities-->
            <replace css:theme-children=".wrap-activities">
                <dl class="theme-portlet wrap-activities">
                    <dt>
                        <i class="fa fa-calendar theme-orange"></i>
                        <xsl:value-of css:select="#content > div:nth-child(3) > div.cell.width-4.position-0 > div.tile > div.cover-collection-tile.tile-content > div.tile-header > h1" />
                    </dt>
                    <xsl:for-each css:select="#content > div:nth-child(3) > div.cell.width-4.position-0 > div.tile > div.cover-collection-tile.tile-content > .collection-item">
                        <dd>
                                <div class="item-img">
                                    <xsl:copy-of css:select="a > img" />
                                </div>
                                <div class="item-text">
                                    <p class="title">
                                        <xsl:copy-of css:select="h3 > a" />
                                    </p>
                                    <p><xsl:value-of css:select="p.description" /></p>
                                </div>
                        </dd>
                    </xsl:for-each>
                </dl>
            </replace>
            <!--partner-->
            <replace css:theme-children=".wrap-partner">
                <dl class="theme-portlet wrap-partner">
                    <dt>
                        <i class="fa fa-user theme-orange"></i>
                        <xsl:value-of css:select="#content > div:nth-child(3) > div.cell.width-4.position-4 > div.tile > div.cover-basic-tile.tile-content > h2 > a" />
                    </dt>
                    <dd>
                        <div class="partner text-center">
                            <xsl:element name="a">
                                <xsl:attribute name="href">
                                    <xsl:value-of select="a/@href" />
                                </xsl:attribute>
                                <xsl:attribute name="class">item-link</xsl:attribute>
                                <xsl:copy-of css:select="#content > div:nth-child(3) > div.cell.width-4.position-4 > div.tile > div.cover-basic-tile.tile-content > a.imag > img" />
                                <p class="title">
                                    <xsl:copy-of css:select="#content > div:nth-child(3) > div.cell.width-4.position-4 > div.tile > div.cover-basic-tile.tile-content > p" /></p>
                            </xsl:element>
                        </div>
                    </dd>
                </dl>
            </replace>
            <!--partners-->
            <replace css:theme-children=".wrap-partners">
                <dl class="theme-portlet wrap-campaign">
                    <dt>
                        <i class="fa fa-users theme-orange"></i>
                        <xsl:value-of css:select="#content > div:nth-child(3) > div.cell.width-8.position-8 > div.tile > div.cover-collection-tile.tile-content > .tile-header > h2" />
                    </dt>
                    <xsl:for-each css:select="#content > div:nth-child(3) > div.cell.width-8.position-8 > div.tile > div.cover-collection-tile.tile-content > .collection-item">
                        <dd>
                            <xsl:element name="a">
                                <xsl:attribute name="href">
                                    <xsl:value-of select="a/@href" />
                                </xsl:attribute>
                                <div class="item-img">
                                    <xsl:copy-of css:select="a > img" />
                                </div>
                                <div class="item-text">
                                    <p class="title">
                                        <xsl:value-of css:select="h2 > a" />
                                    </p>
                                    <p><xsl:value-of css:select="p.description" /></p>
                                </div>
                            </xsl:element>
                        </dd>
                    </xsl:for-each>
                </dl>
            </replace>
            
            
        </rules>
        
        <theme href="center-content.html" if-content="//div[@id='portal-column-one'] and //div[@id='portal-column-two']"/>
        <theme href="right-content.html" css:if-content="#portal-column-one"/>
        <theme href="left-content.html" css:if-content="#portal-column-two"/>
        <theme href="content.html"/>
        
        <!--footer top-->
        <after css:theme-children=".footer-top">
        </after>
        
        <drop theme="/html/body/script" />
        <after css:theme-children="body">
            <script src="++theme++idwfed.theme/js/foundation.min.js"></script>
            <script src="++theme++idwfed.theme/js/app.js"></script>
        </after>
        
</rules>
